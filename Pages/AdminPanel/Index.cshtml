@page
@model BookingSystem.Pages.AdminPanel.IndexModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
<h1 class="mb-3">Add New Customer</h1>

@if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

<div class="mb-3">
    <label class="col-form-label">Name</label>
    <input type="text" class="form-control" asp-for="AddCustomer.FirstName"/>
</div>
<div class="mb-3">
    <label class="col-form-label">Surname</label>
        <input type="text" class="form-control" asp-for="AddCustomer.LastName"/>
</div> 
<div class="mb-3">
    <label class="col-form-label">Email</label>
    <input type="text" class="form-control" asp-for="AddCustomer.EmailAdress"/>
</div>
<div class="mb-3">
    <label class="col-form-label">Phone</label>
    <input type="text" class="form-control" asp-for="AddCustomer.Phone"/>
</div>
<div class="mb-3">
    <label class="col-form-label">Plan</label>
    <input type="number" class="form-control" asp-for="AddCustomer.Plan"/>
</div>

<div class="mb-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>
